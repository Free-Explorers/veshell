    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to running Shell",
            "cwd": "shell",
            "request": "attach",
            "type": "dart",
            "vmServiceInfoFile": "../embedder/vmService.json",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Embedder",
            "env": {
                "XDG_CONFIG_HOME": "${workspaceFolder}/shell/.config",
                "RUST_LOG": "debug",
                "WAYLAND_DEBUG": "server"
            },
            "program": "${workspaceFolder}/embedder/target/debug/veshell", // Replace with your binary name
            "args": [],
            "cwd": "${workspaceFolder}/embedder/",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 3
            }
        }
    ],
    "compounds": [
        {
            "name": "Run Embedder and Attach Shell",
            "configurations": [
                "Embedder",
                "Attach to running Shell"
            ],
            "preLaunchTask": "build_embedder",
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ],
}